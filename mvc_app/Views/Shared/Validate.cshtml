
@{
    ViewData["Title"] = "Validate";
}

@model mvc_app.Models.UserCollection

<head><link rel="stylesheet" type="text/css" href="css/TableStyle.css" /></head>
<body>
<form asp-action="RegisterUser" asp-controller="Table">
    <button type="submit" class="btn btn-success"> Register User </button>
</form>
<table class="container" id="myTable">
    <thead>
    <tr>
        <th >#</th>
        <th ><a asp-action="MoveToTable" asp-controller="Home" asp-route-sortby="name"> Name</a></th>
        <th ><a asp-action="MoveToTable" asp-controller="Home" asp-route-sortby="email_address">Email Address</a></th>
        <th ><a asp-action="MoveToTable" asp-controller="Home" asp-route-sortby="phone_number">Phone Number</a></th>
        <th ><a asp-action="MoveToTable" asp-controller="Home" asp-route-sortby="job_type">Job Type</a></th>
        <th ><a asp-action="MoveToTable" asp-controller="Home" asp-route-sortby="file_name">File Name</a></th>
    </tr>
    </thead>
    <tbody id="myTableBody">
    @{
        int i = 0;
        @foreach (var item in Model.Usercol)
         {
             i++;
             <tr>
                 <td>@i</td>
                 <td>@item.Name</td>
                 <td>@item.email_address</td>
                 <td>@item.phone_number</td>
                 <td>@item.job_type</td>
                 <td><a asp-action="Download" asp-route-filename="@item.FileName">@item.FileName</a></td>
                 <td><a asp-action="DeleteRecord" asp-controller="Table" asp-route-selectedid="@item.id">delete</a></td>
                 <td><a asp-action="MoveToEdit" asp-controller="Table" asp-route-id="@item.id">edit</a></td>
             </tr>

         }
    }

    </tbody>
</table>
<ul>
    @for (int x = 1; x <= ViewBag.count; x++)
        {
            <li><a asp-action="MoveToTable" asp-controller="Home" asp-route-pagenum="@x">@x</a></li>
        }
</ul>

</body>

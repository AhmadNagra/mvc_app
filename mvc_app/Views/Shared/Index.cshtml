

@model mvc_app.Models.Login


<div class="container" align="center">
    <div class="card bg-light">
        <article class="card-body mx-auto" style="max-width: 400px;">
            <h4 class="card-title mt-3 text-center">Sign In</h4>
            <p class="text-center">Provide credentials to Sign In</p>
            <form asp-action="Validate" asp-controller="Login" method="post" enctype="multipart/form-data">
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                    </div>

                    <input asp-for="UserName" class="form-control" placeholder="Full name" type="text">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                    </div>
                    <input asp-for="plainPassword" class="form-control" placeholder="password" type="password">
                    <span asp-validation-for="plainPassword" class="text-danger"></span>
                </div>
                
                <br>
                <br>
                
                    <button type="submit" class="btn btn-primary btn-block"> Login  </button>
                
            </form>
        </article>
    </div>
</div>

<br><br>
